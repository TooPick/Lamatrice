{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} | Recherche : '{{ searchTerm }}'{% endblock %}

{% block body %}
    <section id="aa-product-category">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="aa-product-catg-content">
                        <div class="aa-product-catg-head">
                            <div class="aa-product-catg-head-left">
                                <p>Recherche : '{{ searchTerm }}'</p>
                            </div>
                            <div class="aa-product-catg-head-right">
                                <a id="grid-catg" href="#"><span class="fa fa-th"></span></a>
                                <a id="list-catg" href="#"><span class="fa fa-list"></span></a>
                            </div>
                        </div>
                        <div class="aa-product-catg-body">
                            {% if products is not empty %}
                                <ul class="aa-product-catg">
                                    {% for product in products %}
                                        {% include "AppBundle:App:productsListElement.html.twig" %}
                                        {% include "AppBundle:App:productPreviewModal.html.twig" %}
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <div class="row text-center">
                                    <p class="colored">Aucun produit n'a été trouvé...</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function() {
            var pathAddToCart = "{{ path('app_cart_show') }}";

            $('.add-to-cart').on('click', function(e) {
                e.preventDefault();

                var productId = $(this).attr('data-product');
                var quantity = $('.modal-product-' + productId + ' #product-quantity').val();

                if(quantity > 0) {
                    window.location.replace(pathAddToCart + "add/product/" + productId + "/" + quantity);
                }

            });
        });
    </script>
{% endblock %}